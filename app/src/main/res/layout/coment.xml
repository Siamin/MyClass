<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layoutDirection="rtl">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/textView3"
            android:background="@color/colorPrimary"
            android:text="نظر"
            android:gravity="center_vertical"
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:textStyle="bold"
            android:paddingRight="10dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layoutDirection="rtl"
        android:orientation="vertical">

        <EditText
            android:id="@+id/coment_name"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:ems="10"
            android:hint="نام و نام خانوادگی"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/coment_email"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:ems="10"
            android:layout_weight="1"
            android:hint="ایمیل"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/coment_subject"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:ems="10"
            android:layout_weight="1"
            android:hint="موضوع پیام"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/coment_body"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:ems="10"
            android:hint="متن پیام"
            android:inputType="textPersonName" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5"
            android:gravity="center_vertical|center_horizontal"
            android:layoutDirection="rtl"
            android:orientation="horizontal">

            <Button
                android:id="@+id/coment_cancel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/button_style_cancel"
                android:text="انصراف" />

            <Button
                android:id="@+id/coment_send"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/button_style_save"
                android:text="ارسال نظر" />

        </LinearLayout>

    </LinearLayout>


</LinearLayout>