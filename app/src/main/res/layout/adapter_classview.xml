<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layoutDirection="rtl"
    android:gravity="center_vertical|center_horizontal">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:elevation="8dp"
        android:foregroundGravity="center_vertical|center_horizontal"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="10dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layoutDirection="rtl">
            <CustomObject.TextViewCustom
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="1"
                android:id="@+id/list_class_in_main_row"
                android:gravity="center_vertical|center_horizontal"
                android:background="@drawable/backgrond_text_day_class"
                android:layoutDirection="rtl"
                android:textColor="#000000"
                android:textStyle="bold"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="7dp" />

            <CustomObject.TextViewCustom
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="name class"
                android:id="@+id/list_class_in_main_name_class"
                android:gravity="center_vertical|center_horizontal"
                android:layout_margin="2dp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_weight="1"
                android:textSize="15dp" />

            <CustomObject.TextViewCustom
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="start"
                android:id="@+id/list_class_in_main_start_time"
                android:layoutDirection="rtl"
                android:gravity="center_vertical|center_horizontal"
                android:layout_margin="2dp"
                android:textColor="#1eac01"
                android:textStyle="bold"
                android:layout_weight="1"
                android:textSize="15dp" />

            <CustomObject.TextViewCustom
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="end"
                android:id="@+id/list_class_in_main_end_time"
                android:gravity="center_vertical|center_horizontal"
                android:layout_margin="2dp"
                android:textColor="#f70b0b"
                android:textStyle="bold"
                android:layout_weight="1"
                android:textSize="15dp" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layoutDirection="rtl"
            android:layout_marginTop="2dp">

            <CustomObject.TextViewCustom
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="مکان کلاس"
                android:id="@+id/list_class_in_main_location"
                android:layout_weight="1"
                android:gravity="center_vertical|center_horizontal"
                android:textColor="#000000" />

            <CustomObject.TextViewCustom
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="شماره کلاس"
                android:id="@+id/list_class_in_main_class"
                android:layout_weight="1"
                android:gravity="center_vertical|center_horizontal"
                android:textColor="#000000" />
        </LinearLayout>

        <CustomObject.TextViewCustom
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="توضیحات کلاس"
            android:id="@+id/list_class_in_main_txt"
            android:gravity="right"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:paddingBottom="5dp"
            android:paddingTop="5dp" />

    </LinearLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>