            android:name=".activity.BuyAppActivity"
            android:label="@string/app_name"/>

        <activity
            android:name=".activity.OldClassActivity"
            android:label="@string/app_name"/>

        <activity
            android:name=".activity.ReportClassActivity"
            android:label="@string/app_name"/>

        <activity
            android:name=".activity.LerningActivity"
            android:label="@string/app_name"/>

        <activity
            android:name=".activity.CommentActivity"
            android:label="@string/app_name"/>

        <activity
            android:name=".activity.CrispActivity"
            android:label="@string/app_name"/>

        <activity
            android:name=".activity.EditStudentActivity"
            android:label="@string/app_name"/>


        <!--************************************************************* Service-->
        <service android:name=".Services.FirebaseInstanceService">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT" />
            </intent-filter>
        </service>

        <service android:name=".Services.FirebaseMessagingService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>


