<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="rtl">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layoutDirection="rtl">

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="جلسات گذشته"
            android:id="@+id/list_class_chang_old_class"
            android:layout_weight="1"
            android:background="@drawable/selector"
            android:layout_margin="5dp"
            android:textSize="15dp" />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="جلسه ی جدید"
            android:id="@+id/list_class_chang_new_class"
            android:layout_weight="1"
            android:background="@drawable/selector"
            android:layout_margin="5dp"
            android:textSize="15dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layoutDirection="rtl">
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="خروجی از کلاس"
            android:id="@+id/list_class_chang_output_class"
            android:layout_weight="1"
            android:background="@drawable/selector"
            android:layout_margin="5dp"
            android:textSize="15dp" />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="ویرایش کلاس"
            android:id="@+id/list_class_chang_edit_class"
            android:layout_weight="1"
            android:background="@drawable/selector"
            android:layout_margin="5dp"
            android:textSize="15dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layoutDirection="rtl">
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text=" دانشجو جدید"
            android:id="@+id/list_class_chang_add_student_class"
            android:layout_weight="1"
            android:background="@drawable/selector"
            android:layout_margin="5dp"
            android:textSize="15dp" />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="توضیحات"
            android:id="@+id/list_class_chang_text_class"
            android:layout_weight="1"
            android:background="@drawable/selector"
            android:layout_margin="5dp"
            android:textSize="15dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layoutDirection="rtl">
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="     ایام هفته     "
            android:id="@+id/list_class_chang_add_class_of_week_class"
            android:layout_weight="1"
            android:background="@drawable/selector"
            android:layout_margin="5dp"
            android:textSize="15dp"/>


        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="حذف کلاس"
            android:id="@+id/list_class_chang_delete_class"
            android:layout_weight="1"
            android:background="@drawable/selector"
            android:layout_margin="5dp"
            android:textSize="15dp"
            android:textColor="#fe0202" />
    </LinearLayout>

</LinearLayout>