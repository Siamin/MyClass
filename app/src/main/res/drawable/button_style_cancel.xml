<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="#fac5c7"
                android:centerColor="#f98c90"
                android:endColor="#fac5c7"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#f98c90" />
            <corners
                android:radius="25dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#fac5c7"
                android:centerColor="#ff4d53"
                android:endColor="#fac5c7"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#ff4d53" />
            <corners
                android:radius="10dp"/>
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>