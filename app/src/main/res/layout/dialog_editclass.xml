<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="right">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollIndicators="right"
            android:layoutDirection="rtl"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical|center_horizontal">

            <TextView
                android:layout_width="140dp"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text=" روز هفته:"
                android:id="@+id/class_of_week_day_text"
                android:gravity="center_vertical|center_horizontal"
                android:layout_gravity="top" />

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/class_of_week_spinner"
                android:background="@drawable/bacgrond_spinner"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="8dp"
                android:layout_marginBottom="1dp"
                android:spinnerMode="dropdown"
                android:textAlignment="center"

                android:layout_gravity="top" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layoutDirection="rtl"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="ساعت شروع کلاس:"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:gravity="center_vertical|center_horizontal" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:layout_weight="1"
                    android:background="#4db2ff" />
            </LinearLayout>

            <TimePicker
                android:id="@+id/class_of_week_start_time_picker"
                android:layout_width="wrap_content"
                android:layout_height="120dp"
                android:timePickerMode="spinner"
                android:background="@drawable/bacgrond_timepicker"
                android:foregroundGravity="center_vertical|center_horizontal"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:layout_weight="1" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical|center_horizontal"
            android:layout_gravity="center"
            android:layout_margin="5dp">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layoutDirection="rtl"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text=" ساعت پایان کلاس:"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:gravity="center_vertical|center_horizontal" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:layout_weight="1"
                    android:background="#4db2ff" />
            </LinearLayout>

            <TimePicker
                android:id="@+id/class_of_week_end_time_picker"
                android:layout_width="wrap_content"
                android:layout_height="120dp"
                android:timePickerMode="spinner"
                android:background="@drawable/bacgrond_timepicker2"
                android:foregroundGravity="center_vertical|center_horizontal"
                android:layout_gravity="center"
                android:layout_weight="1" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollIndicators="right"
            android:layoutDirection="rtl"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp">

            <TextView
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="شماره کلاس:"
                android:id="@+id/class_of_week_class_text"
                android:gravity="center_vertical|center_horizontal" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/class_of_week_class_edit"
                android:background="@drawable/bacgrond_edittext"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="1dp"
                android:layout_marginBottom="1dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layoutDirection="rtl">



            <Button
                android:layout_width="0dp"
                android:layout_height="65dp"
                android:text="ذخیره"
                android:id="@+id/class_of_week_save"
                android:background="@drawable/button_style_save"
                android:layout_weight="1"
                android:textColor="#ffffff"
                android:textSize="15dp"
                android:textStyle="bold"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp" />

            <Button
                android:layout_width="0dp"
                android:layout_height="65dp"
                android:text="بازگشت"
                android:background="@drawable/button_style_cancel"
                android:id="@+id/class_of_week_cancel"
                android:layout_weight="1"
                android:textColor="#ffffff"
                android:textSize="15dp"
                android:textStyle="bold"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>