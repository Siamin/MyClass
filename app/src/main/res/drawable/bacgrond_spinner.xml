<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <layer-list>
            <item>
                <shape>
                    <gradient
                        android:startColor="#dbf0ff"
                        android:centerColor="#c4e6ff"
                        android:endColor="#dbf0ff"
                        android:angle="270"
                        android:type="linear" />

                    <stroke android:width="1dp" android:color="#4db2ff" />

                    <corners android:radius="10dp" />

                    <padding android:bottom="3dp" android:left="3dp" android:right="3dp" android:top="3dp" />
                </shape>
            </item>
            <item>
                <bitmap android:gravity="center|left" android:src="@android:drawable/arrow_down_float"/>
            </item>
        </layer-list>
    </item>

</selector>