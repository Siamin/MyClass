<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center_vertical|center_horizontal">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:elevation="8dp"
        android:foregroundGravity="center_vertical|center_horizontal"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="10dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|center_horizontal">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_10sdp"
                android:gravity="center_vertical">

                <CustomObject.TextViewCustom
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/list_show_student_sno"
                    android:gravity="center_vertical|center_horizontal"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:paddingRight="@dimen/_5sdp"
                    android:paddingLeft="@dimen/_5sdp"
                    android:textSize="@dimen/_14sdp" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/_2sdp">

                    <CustomObject.TextViewCustom
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:id="@+id/list_show_student_name"
                        android:gravity="center_vertical|center_horizontal"
                        android:textSize="@dimen/_15sdp" />

                    <CustomObject.TextViewCustom
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:id="@+id/list_show_student_family"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:gravity="center_vertical|center_horizontal"
                        android:textSize="@dimen/_15sdp" />
                </LinearLayout>

                <CustomObject.TextViewCustom
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/Score"
                    android:padding="@dimen/_3sdp"
                    android:id="@+id/list_show_student_nomerh"
                    android:gravity="center_vertical|center_horizontal"
                    android:background="@drawable/bacgrond_timepicker"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:textSize="@dimen/_14sdp" />

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:padding="@dimen/_5sdp"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:id="@+id/list_show_student_status"
                    android:gravity="center_vertical|center_horizontal"
                    android:nestedScrollingEnabled="true"
                    android:checked="false"
                    android:button="@drawable/chechbox_new_class" />

            </LinearLayout>

            <CustomObject.TextViewCustom
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:text="@string/studentDescription"
                android:id="@+id/list_show_student_text"
                android:gravity="center_vertical"
                android:paddingRight="@dimen/_10sdp"
                android:paddingLeft="@dimen/_10sdp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>